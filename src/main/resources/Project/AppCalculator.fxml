<?xml version="1.0" encoding="UTF-8"?>



<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Project.CalculatorProjectController">
    <Label text="Student Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="studentNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Subject Code:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="subjectCodeField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Grade:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="gradeField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label GridPane.columnIndex="0" GridPane.rowIndex="4"/> 
    <Label GridPane.columnIndex="1" GridPane.rowIndex="4"/>


    <Label text="Selected Subject:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="selectedSubjectField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
   

    <Button text="Calculate" onAction="#calculate" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

</GridPane>
